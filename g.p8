pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
#include turtle.lua
#include fireball.lua

function _init()
  wizard = mkturtle()
  wizard.exec(drawWizard)
  wizard.recv(castFireball)
  dragon = mkturtle()
  dragon.exec(drawDragon)
  dragon.recv(breatheFire)
  kbd = mkroutine(checkKbd, true)
end
function _update()
   if not runStep()
   then
        stop()
   end
end
function _draw()
   cls(4)
   turtleDraw()
end
