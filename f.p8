pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
#include turtle.lua
function _init()
   cls(4)
   t1 = mkturtle()
   t2 = mkturtle()
   t1.setcolor(0)
   t2.setcolor(3)
   spiral(t1, 117, 3)
   spiral(t2, 123, 3)
end
function _update()
   if not runStep()
   then
        t1.hide()
        t2.hide()
   end
end
function _draw()
   cls(4)
   turtleDraw()
end
